init_alertSystem()
{


}




doAction_sendAlerts()
{

}






void doAction_alerts(Msg* p)
 {
	int cmd;

	 __no_operation();

	 cmd= p->msg;

	switch(cmd)
	{

	case SEND_ALERTS:
		doAction_sendAlerts();
		break;

	case CLEAR_ALERTS:
		doAction_clearAlerts();
		break;

	case SET_TEMP_THRESHOLD:
		break;

	case SET_SMOKEDETECT_THRESOLD:
		break;



	default:
		_no_operation();
		break;

	}



 }

